REPORT zprogramof_case_statement.

DATA lv_input(2) type n value 2.

CASE lv_input.
  WHEN 1.
    WRITE : 'the output is',lv_input.
  WHEN 2.
    WRITE : 'the output is',lv_input.
  WHEN 3.
    WRITE : 'the output is',lv_input.
  WHEN OTHERS.
    WRITE : 'wrong output',lv_input.
ENDCASE.


OUTPUT - the output is 02
